<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF2FA"
    tools:context=".Age_Cal_Activity">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        >

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:neumorph_shapeType="flat">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="35sp"
                android:textStyle="bold"
                android:text="Age Clculator"
                android:textColor="#00072B"
                android:gravity="center"/>

        </soup.neumorphism.NeumorphCardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neumorph_shapeType="flat">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="Current Date"
                        android:padding="6dp"
                        android:textColor="#3A426E"
                        android:gravity="center"/>

                </soup.neumorphism.NeumorphCardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neumorph_shapeType="basin">

                        <EditText
                            android:id="@+id/etAgeDay"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:hint="DD"
                            android:textSize="25sp"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="2" />



                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neumorph_shapeType="basin">

                        <EditText
                            android:id="@+id/etAgeMonth"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:hint="MM"
                            android:inputType="number"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:maxLength="2" />


                    </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neumorph_shapeType="basin">

                        <EditText
                            android:id="@+id/etAgeYear"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:hint="YYYY"
                            android:textSize="25sp"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="4" />


                    </soup.neumorphism.NeumorphCardView>



                </LinearLayout>

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neumorph_shapeType="flat">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:text="Date Of Birth"
                        android:textColor="#3A426E"
                        android:gravity="center"/>

                </soup.neumorphism.NeumorphCardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neumorph_shapeType="basin">

                        <EditText
                            android:id="@+id/etBirhdayDay"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:hint="DD"
                            android:textSize="25sp"
                            android:textColor="#3A426E"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="2" />



                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neumorph_shapeType="basin">

                        <EditText
                            android:id="@+id/etBirhdayMonth"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:clickable="true"
                            android:hint="MM"
                            android:textSize="25sp"
                            android:textColor="#3A426E"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="2" />


                    </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:neumorph_shapeType="basin">
                        <EditText
                            android:id="@+id/etBirhdayYear"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:hint="YYYY"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:textColor="#3A426E"
                            android:inputType="number"
                            android:maxLength="4" />



                    </soup.neumorphism.NeumorphCardView>



                </LinearLayout>

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:neumorph_shapeType="flat">

                    <Button
                        android:id="@+id/buttonCalculate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:background="#DDF2FA"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="CALCULATE"
                        android:textSize="25sp"
                        android:textColor="#E11212"
                        android:textStyle="bold" />

                </soup.neumorphism.NeumorphCardView>


                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginBottom="20dp"
                    app:neumorph_shapeType="flat">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="#DDF2FA"
                        android:elevation="7dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/year_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:minWidth="100dp"
                                android:singleLine="true"
                                android:text="Year"
                                android:textColor="#3A426E"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:editable="false"
                                android:hint="0"
                                android:textSize="25sp"
                                android:textColor="#3A426E"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/month_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:minWidth="100dp"
                                android:singleLine="true"
                                android:text="Month"
                                android:textColor="#3A426E"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etMonth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:editable="false"
                                android:hint="0"
                                android:textColor="#3A426E"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tAmount_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:minWidth="100dp"
                                android:singleLine="true"
                                android:text="Days"
                                android:textColor="#3A426E"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvResult"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:editable="false"
                                android:hint="0"
                                android:textColor="#3A426E"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </soup.neumorphism.NeumorphCardView>


            </LinearLayout>



        </ScrollView>







    </LinearLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        android:background="#C3BABA"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>




</RelativeLayout>